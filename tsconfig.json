{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["es6"],
    "allowJs": false,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts"],
  "exclude": ["build", "src/**/*.test.ts"]
}
